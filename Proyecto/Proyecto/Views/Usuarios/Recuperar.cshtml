@{
    ViewBag.Title = "Recuperar";
}

<h2>Recuperar</h2>
<div class="container">
    <div class="row">
        <div class="col-sm-offset-4 col-sm-4 ">
            <h2>Recuperar Contraseña - @ViewBag.correo</h2>

            @using (Html.BeginForm("AsignarContra", "Usuarios", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label>Correo</label>
                    <input type="hidden" name="email" id="email" value="@ViewBag.correo" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="pass1">Ingrese su nueva contraseña:</label>
                    <input type="password" name="pass1" id="pass1" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="pass2">Confirmar Contraseña:</label>
                    <input type="password" name="pass2" id="pass2" class="form-control" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-primary btn-block">Iniciar sesion</button>
                </div>
            }
        </div>
    </div>
</div>

