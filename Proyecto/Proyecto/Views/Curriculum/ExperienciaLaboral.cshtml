@model Proyecto.Models.exp_profesional

@{
    ViewBag.Title = "ExperienciaLaboral";
}

<h2>Crear Curriculum</h2>
<h3>Cuarto Paso: Experiencia Laboral</h3>

@using (Html.BeginForm("ExperienciaLaboral", "Curriculum", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h4 style="color: red;">@ViewBag.errorB</h4>

        <div class="form-group">
            @Html.LabelFor(model => model.empresa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.empresa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.empresa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cargo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cargo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cargo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.jefe_inmediato, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.jefe_inmediato, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.jefe_inmediato, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fech_inicio, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input id="inicio" name="inicio" type="date" required>
                @Html.ValidationMessageFor(model => model.fech_inicio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fech_fin, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input id="fin" name="fin" type="date" required>
                @Html.ValidationMessageFor(model => model.fech_fin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.salario, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.salario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.salario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ingresar" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<br />
<div class="container" style="width:100%;margin:auto;">
    <a href="Referencia" class="btn btn-success">Siguiente</a>
</div>
<br />
<h3>Lista de Experiencias Laborales</h3>
<table class="table table-hover" style="width:100%;border: none;margin:auto;">
    <tr>
        <th style="text-align:center;">
            Empresa
        </th>
        <th style="text-align:center;">
            Cargo
        </th>
        <th style="text-align:center;">
            Jefe Inmediato
        </th>
        <th style="text-align:center;">
            Fecha de Inicio
        </th>
        <th style="text-align:center;">
            Fecha de Fin
        </th>
        <th style="text-align:center;">
            Salario $
        </th>
    </tr>

    @foreach (var item in @ViewBag.FormA)
    {
    <tr>
        <td style="text-align:center;">
            @foreach (var item1 in @ViewBag.Form)
            {
                if (item.id_cv_exp_laboral == item1.id_exp_profesional)
                {
                    @item1.empresa
                }
            }
        </td>
        <td style="text-align:center;">
            @foreach (var item1 in @ViewBag.Form)
            {
                if (item.id_cv_exp_laboral == item1.id_exp_profesional)
                {
                    @item1.cargo
                }
            }
        </td>
        <td style="text-align:center;">
            @foreach (var item1 in @ViewBag.Form)
            {
                if (item.id_cv_exp_laboral == item1.id_exp_profesional)
                {
                    @item1.jefe_inmediato
                }
            }
        </td>
        <td style="text-align:center;">
            @foreach (var item1 in @ViewBag.Form)
            {
                if (item.id_cv_exp_laboral == item1.id_exp_profesional)
                {
                    @item1.fech_inicio
                }
            }
        </td>
        <td style="text-align:center;">
            @foreach (var item1 in @ViewBag.Form)
            {
                if (item.id_cv_exp_laboral == item1.id_exp_profesional)
                {
                    @item1.fech_fin
                }
            }
        </td>
        <td style="text-align:center;">
            @foreach (var item1 in @ViewBag.Form)
            {
                if (item.id_cv_exp_laboral == item1.id_exp_profesional)
                {
                    @item1.salario
                }
            }
        </td>
        <td style="text-align:center;">
            @Html.ActionLink("Eliminar", "ExperienciaLaboral", new { id = item.id_cv_exp_laboral }, new { @class = "btn btn-danger", @onclick = "return confirm('Esta seguro que desea eliminar esta experiencia laboral?')" })
        </td>
    </tr>
    }
</table>
