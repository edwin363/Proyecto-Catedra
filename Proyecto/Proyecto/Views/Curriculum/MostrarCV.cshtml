                    }
                }
            </td>
            <td style="text-align:center;">
                @foreach (var item1 in @ViewBag.R)
                {
                    if (item.id_referencia == item1.id_referencia)
                    {
                        @item1.institucion
                    }
                }
            </td>
            <td style="text-align:center;">
                @foreach (var item1 in @ViewBag.R)
                {
                    if (item.id_referencia == item1.id_referencia)
                    {
                        @item1.email
                    }
                }
            </td>

        </tr>
    }
</table>

