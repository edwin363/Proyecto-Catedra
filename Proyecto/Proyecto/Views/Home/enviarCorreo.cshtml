
@{
    ViewBag.Title = "enviarCorreo";
}

<h2>enviarCorreo</h2>
<div class="container">
    <div class="row">
        <div class="col-sm-offset-4 col-sm-4 ">
            <h2>¡¡ ESTA ES UNA PRUEBA NO IMPLEMENTARLA !!!</h2>

            @using (Html.BeginForm("enviarCorreo","Home",FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                
                <div class="form-group">
                    <label for="email">Correo Destino:</label>
                    <input type="text" name="emailDestino" id="emailDestino" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="password">Codigo:</label>
                    <input type="text" name="codigo" id="codigo" class="form-control" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-primary btn-block">Iniciar sesion</button>
                </div>
            }
        </div>
    </div>
</div>

