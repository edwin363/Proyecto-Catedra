@{
    ViewBag.Title = "Validar";
}

<h2>Validar</h2>
<div class="container">
    <div class="row">
        <div class="col-sm-offset-4 col-sm-4 ">
            <h2>Validar Cuenta</h2>

            @using (Html.BeginForm("Validar", "IngresarCandidato", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label>Ingrese el codigo:</label>
                    <input type="text" name="codigo" id="codigo" class="form-control" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-primary btn-block">Iniciar sesion</button>
                </div>
            }
        </div>
    </div>
</div>


